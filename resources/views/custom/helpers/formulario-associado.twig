    {# o box geral precisa ter class 'box-contato' para dar retorno visual ao usuario do processamento do form #}
    <div class="contato-fale-conosco box-contato">
        {# o form precisa ter class 'form-contato' para ser processado pelo sistema #}
        
        <form class="form-contato">
            
            <div class="formEnviar">
                <input type="hidden" name="token" value="{{data.Guest.token|default("")}}">
                <input type="hidden" name="FormularioID" value="1">
                <input type="hidden" name="Tag" value="contato/fale-conosco">
                <input class="form-control" type="hidden" name="Assunto" value="Novo Associado"/>
                {% if sitecorretor.Apelido %}<input type="hidden" name="corretor" value="{{sitecorretor.Apelido}}"/>{% endif %}
                
                <div class="row mx-0">
                    <div class="col-12">
                        <h2>Seja nosso associado</h2>
                    </div>
                    
                    <div class="col-12">
                        <h4 class="title_4">Seja nosso associado e fature alto, com flexibilidade, autonomia e melhores ferramentas do mercado!</h4>
                        <p>Preencha o formulário abaixo:</p>
                        <br>
                    </div>

                    <div class="form-group col-lg-6 col-12">
                        <input class="form-control" type="text" name="Nome" value="{{data.Guest.Nome|default("")}}" placeholder="Nome e Sobrenome*" required/>
                    </div>

                    <div class="form-group col-lg-6 col-12">
                        <input class="form-control mask-email" type="email" name="Email" value="{{data.Guest.Email|default("")}}" placeholder="E-mail*" required/>
                    </div>

                    <div class="form-group col-lg-4 col-12">
                        <input class="form-control mask-tel" type="text" name="TelResidencial" value="{{data.Guest.TelResidencial|default("")}}" placeholder="DDD + Telefone"/>
                    </div>
                    
                    <div class="form-group col-lg-4 col-12">
                        <input class="form-control mask-tel" type="text" name="TelCelular" value="{{data.Guest.TelCelular|default("")}}" placeholder="DDD + Celular"/>
                    </div>
                    
                    <div class="form-group col-lg-4 col-12">
                        <input class="form-control mask-tel" type="text" name="bairro" data='values' value="" placeholder="Bairro"/>
                    </div>
                    
                    <div class="form-group col-12">
                        <textarea name="Mensagem" class="form-control" placeholder="Mensagem*" required></textarea>
                    </div>        

                    <div class="form-group col-12 text-right">
                        {# o botao de submit precisa ter a classe 'form-submit' #}
                        <button class="btn form-submit" type="submit" value="ok">Enviar</button>
                    </div>

                    <div class="col-12">
                        {# o span contato-mss recebe as mensagens de retorno para o usuario #}
                        <h3 class="contato-titulo"></h3>
                        <span class="contato-mss"></span>
                    </div>
                </div>
            </div>

            <div class="formResposta text-center">
                <i class="far fa-check-circle"></i>
                <h2><strong>Mensagem enviada,</strong> breve entraremos em contato.</h2>
            </div>
                
        </form>
    </div>

                                
