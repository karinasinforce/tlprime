<head>
    <link rel="icon" href="{{asset('/img/favicon.ico')}}">
    <meta charset="UTF-8">
    <title>Configuração Inicial do Site | {{ APP_NAME }}</title>    
      
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    
    <meta name="description" content="{{ html_header_description|raw|default( APP_NAME ~ " | Imóveis, apartamentos, casas, terrenos, compra, venda e aluguel.") }}"/>
    <meta name="keywords" content="{{ html_header_description|raw|default("Imóveis, apartamentos, casas, terrenos, compra, venda e aluguel.") }}"/>

    <!-- Bootstrap 3.3.7 CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css" />        

    <!-- BASE CSS -->
    <link href="{{ mix('/css/base.css') }}" rel="stylesheet" type="text/css" />
    
    <!-- CUSTOM CSS -->
    <link href="{{ mix('/css/theme.css') }}" rel="stylesheet" type="text/css" /> 
   
</head>

<body class="page page-config  ">
    <div class="wrapper">
        <!-- Main Header -->
        <header></header>
    </div>


    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container">
                <ol class="breadcrumb"></ol>
            </div>

            <div class="main_title">
                <div class="container">
                    <h1><div class="">Configuração Inicial do Site</div><small><div class="hide">Configuração Inicial do Site</div></small></h1>
                </div>                            
            </div>                          
        </section>

        <section class="content">
             <!-- CONTENT -->                                            
            <div class="spark-screen">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">   

                            {#
                            creci           CJ 12345
                            endereco        Av. Brasil, 5.200, Sala 1.128 - Torre Shopping
                            facebook_url    https://www.facebook.com/oficialfb/
                            googleanalytics UA-99990000-1
                            telefones       [{"Telefone":"(21) 3315-8500"}, {"Whatsapp": "(21) 98001-0705"}]
                            manutencao      1                            
                            #}
                            
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    
                                    <form class="form config-box" method="POST">
                                        {{ csrf_field() }}
                                        <input type="hidden" id="siteconfig" name="siteconfig" value="1">
                                        
                                        <div class="col-md-12">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>Telefones</label>
                                                    <input type="text" name="telefones" class="form-control" value='[{"Telefone": ""}, {"Celular": ""}, {"Whatsapp": ""}]'>
                                                </div>
                                            </div>
                                        </div>
                                        </div>                                        
                                        
                                        <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>CRECI</label>
                                                    <input type="text" name="creci" class="form-control" value="{{creci}}">
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>Endereço da Imobiliária</label>
                                                    <input type="text" name="endereco" class="form-control" value="{{endereco}}">
                                                </div>
                                            </div>
                                        </div>
                                        </div>

                                        <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>Facebook da Imobiliária</label>
                                                    <input type="text" name="facebook_url" class="form-control" value="{{facebook_url}}">
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>Youtube da Imobiliária</label>
                                                    <input type="text" name="youtube_url" class="form-control" value="{{youtube_url}}">
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>Google Analytics</label>
                                                    <input type="text" name="googleanalytics" class="form-control" value="{{googleanalytics}}">
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>Ativar os Favoritos?</label></br>
                                                    <span class="radio-inline">
                                                        <input type="radio" name="userfavoritos" class="" {{(userfavoritos) ? "checked" : ""}} id="userfavoritos_sim" value="1">
                                                        <label for="userfavoritos_sim" class="">Sim</label>
                                                    </span>
                                                    
                                                    <span class="radio-inline">
                                                        <input type="radio" name="userfavoritos" class="" {{(userfavoritos) ? "" : "checked"}} id="userfavoritos_nao" value="0">
                                                        <label for="userfavoritos_nao" class="">Não</label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        </div>

                                        <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>Ativar o Site do Corretor?</label></br>
                                                    
                                                    <span class="radio-inline">
                                                        <input type="radio" name="sitecorretor" {{(sitecorretor) ? "checked" : ""}} id="sitecorretor_sim" value="1">
                                                        <label for="sitecorretor_sim" class="">Sim</label>
                                                    </span>
                                                    
                                                    <span class="radio-inline">
                                                        <input type="radio" name="sitecorretor" {{(sitecorretor) ? "" : "checked"}} id="sitecorretor_nao" value="0">
                                                        <label for="sitecorretor_nao" class="">Não</label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>        
                                        </div>        

                                        <div class="col-md-6">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="input-group col-md-12">
                                                    <label>Ativar Site de Filial?</label></br>
                                                    
                                                    <span class="radio-inline">
                                                        <input type="radio" name="sitefilial" {{(sitefilial) ? "checked" : ""}} id="sitefilial_sim" value="1">
                                                        <label for="sitefilial_sim" class="">Sim</label>
                                                    </span>
                                                    
                                                    <span class="radio-inline">     
                                                        <input type="radio" name="sitefilial" {{(sitefilial) ? "" : "checked"}} id="sitefilial_nao" value="0">
                                                        <label for="sitefilial_nao" class="">Não</label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>  
                                        </div>  
                                        
                                        <div class="col-md-12">
                                            <div class="btn-group">
                                                <button type="submit" class="btn btn-primary"> Salvar </button>
                                            </div>
                                        </div>  
                                        
                                    </form>  
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <footer class="footer-main"></footer>
</body>
        

