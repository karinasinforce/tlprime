
<!-- Modal -->
<div id="contatenos" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Entrar em contato</h4>
            </div>

            <div class="modal-body">

                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#menu1">Telefone</a></li>
                    {# <li><a data-toggle="tab" href="#menu2">Chat</a></li> #}
                    <li><a data-toggle="tab" href="#menu3">Email</a></li>
                </ul>

                <div class="tab-content">

                    <div id="menu1" class="tab-pane fade in active text-center">
                        <br/>
                        <h4>Central de atendimento:</h4>

                        <a href="tel:0{{siteparam.telefones['Telefone']}}" class="btn btn-default btn-lg">Ligar</a>

                        {% if siteparam.telefones['Whatsapp'] %}
                            <a href="https://api.whatsapp.com/send?phone=55{{ siteparam.telefones['Whatsapp'] }}&text=Ol%C3%A1!" class="btn btn-success btn-lg">Conversar pelo Watsapp</a>
                        {% endif %}
                    </div>

                    {# <div id="menu2" class="tab-pane fade text-center">
                        <br/>
                        <a href="#" class="btn btn-default btn-lg">Iniciar Chat</a>
                    </div> #}

                    <div id="menu3" class="tab-pane fade">
                        {% include ['custom.helpers.formulario-fale-conosco-modal','core.helpers.formulario-fale-conosco-modal'] with {data:data} %}
                    </div>




                </div>

            </div>

            {# <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div> #}
        </div>

    </div>
</div>
