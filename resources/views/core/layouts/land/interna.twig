
{# LANCAMENTOS #}
{% set item = content %}


<div id="product-content" class=" {%if data.isMobile %}mobile{%endif%} item-id-{{item.ID}}">

    <!-- INFORMACOES -->
    
    {% if item.Topicos %}
        
        {% for key, item in item.Topicos %}
            {% if item.Nome == 'O Empreendimento' %}

                <section id="{{item.Nome|replace({' ':'-', '.':''})|lower}}" class="js-topics section o-empreendimento">
                    <div class="container">
                        <div class="row">
                            
                            {% if item.Imagens %}
                                <div class="col-md-5">
                                    <ul class="lightgallery_slide owl-carousel-topicos owl-carousel owl-theme">
                                        {% for img in item.Imagens %}
                                            <li class="item">
                                                <a href="{{IMG_PATH}}/{{img}}.jpg?wm=5&mh=800">
                                                    <img src="{{IMG_PATH}}/{{img}}.jpg?mw=500&wm=5" alt="" class="hide">
                                                    <div class="img-thumb" style="background-image: url({{IMG_PATH}}/{{img}}.jpg?mw=500&wm=5);">
                                                        <i class="fa fa-search" aria-hidden="true"></i>
                                                    </div>
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                            
                            <div class="col-md-7">
                                <h2 class="sectionTitle">{{item.Nome}}</h2>
                                <div class="descript">
                                    {{item.Descricao|raw}}
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <ul class="icones_emp">
                                
                                <li>
                                    <img src="/img/land/status.svg" alt="" class="img-responsive tosvg">
                                    <span>{{content.StatusNome}}</span>
                                </li>
                                {% if content.Tipos %}
                                    <li>
                                        <img src="/img/land/tipos_house.svg" alt="" class="img-responsive tosvg">
                                        <span>{{content.Tipos|join(', ')}}</span>
                                    </li>
                                {% endif %}

                                <li>
                                    <img src="/img/land/quartos_house.svg" alt="" class="img-responsive tosvg">
                                    <span>{{content.QtdQuarto|join(', ')}} Quartos</span>
                                </li>

                            </ul>
                            
                        </div>

                        <div class="row text-center">
                                <h3 class="conheca"><a href="#lazer" class="anchor-link">Conheça os Itens de Lazer</a></h3>    
                        </div>

                    </div>

                </section>
            {% endif %}


            {% if item.Nome == 'Lazer' %}

                <section id="{{item.Nome|replace({' ':'-', '.':''})|lower}}" class="js-topics section lazer bg-dark sectionHalfImg">
                    <div class="container">
                        <div class="row">
                            
                            <div class="col-md-7 text">
                                <h2 class="sectionTitle">{{item.Nome}}</h2>
                                <div class="descript">
                                    {{item.Descricao|raw}}
                                </div>
                            </div>

                        </div>
                    </div>
                    
                    {% if item.Imagens %}
                        <div class="col-md-5 image right">
                            <ul class="lightgallery_slide owl-carousel-topicos owl-carousel owl-theme">
                                {% for img in item.Imagens %}
                                    <li class="item">
                                        <a href="{{IMG_PATH}}/{{img}}.jpg?wm=5&mh=800">
                                            <img src="{{IMG_PATH}}/{{img}}.jpg?mw=500&wm=5" alt="" class="hide">
                                            <div class="img-thumb" style="background-image: url({{IMG_PATH}}/{{img}}.jpg?mw=800&wm=5);">
                                                <i class="fa fa-search" aria-hidden="true"></i>
                                            </div>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    
                </section>

                <section id="barraContato">
                    <div class="container">                        
                        <div class="wrap">
                            <div class="texto">
                                <h3>Quer mais informações sobre <br>
                                    esse empreendimento?</h3>
                            
                                <p>Preencha o formulário e ficaremos felizes em entrar em contato!</p>
                            </div>
                            
                            <div class="btns">
                                <button type="button" class="btcontato" onclick="$('#FormInteressado').modal()"><span>QUERO <br>RECEBER <br>CONTATO</span></button>
                                <a href="https://api.whatsapp.com/send?phone={{siteparam.telefones.whatsapp}}&text=ol%C3%A1!" class="at_whatsapp btfalar" data-tel="{{siteparam.telefones.whatsapp}}" target="_blank">
                                    <span>QUERO <br>Falar <br>Agora</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </section>

            {% endif %}

            {% if item.Nome == 'Plantas' %}

                <section id="{{item.Nome|replace({' ':'-', '.':''})|lower}}" class="js-topics section blocoWhitgaleria">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h2 class="sectionTitle">{{item.Nome}}</h2>
                            </div>

                            <div class="col-md-8 col-md-offset-2 text">
                                <div class="descript text-center">
                                    {{item.Descricao|raw}}
                                </div>
                            </div>

                        </div>
                    </div>
                    
                    {% if item.Imagens %}  
                        <ul class="lightgallery_slide owl-carousel-grid-5 owl-carousel owl-theme gallery">
                            {% for img in item.Imagens %}
                                <li class="item">
                                    <a href="{{IMG_PATH}}/{{img}}.jpg?wm=5&mh=800">
                                        <img src="{{IMG_PATH}}/{{img}}.jpg?mw=500&wm=5" alt="" class="hide">
                                        <div class="img-thumb" style="background-image: url({{IMG_PATH}}/{{img}}.jpg?mw=800&wm=5);">
                                            <i class="fa fa-search-plus" aria-hidden="true"></i>
                                        </div>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    
                </section>
            {% endif %}

            {% if item.Nome != 'Plantas' and item.Nome != 'Lazer' and item.Nome != 'O Empreendimento' and item.Nome != 'Vídeo' and item.Nome != 'Localização' %}

                <section id="{{item.Nome|replace({' ':'-', '.':''})|lower}}" class="js-topics section blocoWhitgaleria default-topic">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h2 class="sectionTitle">{{item.Nome}}</h2>
                            </div>

                            <div class="col-md-8 col-md-offset-2 text">
                                <div class="descript text-center">
                                    {{item.Descricao|raw}}
                                </div>
                            </div>

                        </div>
                    </div>
                    
                    {% if item.Imagens %}  
                        <ul class="lightgallery_slide owl-carousel-grid-5 owl-carousel owl-theme gallery">
                            {% for img in item.Imagens %}
                                <li class="item">
                                    <a href="{{IMG_PATH}}/{{img}}.jpg?wm=5&mh=800">
                                        <img src="{{IMG_PATH}}/{{img}}.jpg?mw=500&wm=5" alt="" class="hide">
                                        <div class="img-thumb" style="background-image: url({{IMG_PATH}}/{{img}}.jpg?mw=800&wm=5);">
                                            <i class="fa fa-search-plus" aria-hidden="true"></i>
                                        </div>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    
                </section>
            {% endif %}

            {% if item.Nome == 'Vídeo' %}

                <section id="{{item.Nome|replace({' ':'-', '.':''})|lower}}" class="js-topics section blocoWhitgaleria">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <h2 class="sectionTitle">{{item.Nome}}</h2>
                            </div>

                            <div class="col-md-8 col-md-offset-2 text">
                                <div class="descript text-center">
                                    {{item.Descricao|raw}}
                                </div>
                            </div>

                        </div>
                    </div>
                    
                    <div class="content_iframe"></div>
                </section>
            {% endif %}


        {% endfor %}


            
    {% endif %}
    

    {% if item.Topicos %}
        {% for key, item in item.Topicos if item.Nome == 'Localização' %}
            <section id="{{item.Nome|replace({' ':'-', '.':''})|lower}}" class="js-topics section bg-dark">
                <!-- MAPA -->
                <div class="container">
                    <div class="row-box localizacao">
                        <h2 class="sectionTitle">{{item.Nome}}</h2>
                        <div class="descript">
                            {{item.Descricao|raw}}
                        </div>
                    </div>
                </div>
                <div id="map_canvas"></div>
            </section>
        {% endfor %}
    {% endif %}

</div>



<!-- END CONTENT -->
<script type="text/javascript">
    $(document).ready(function(){
        
        $('#product-content .slider-case').slick({
            asNavFor: '#product-content .slides',
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true
        });  
        $("#product-content .slides").slick({
            asNavFor: '#product-content .slider-case',
            slidesToShow: 3, 
            slidesToScroll: 1,
            centerMode: true,
            focusOnSelect: true,
            nextArrow: '<i class="fa fa-chevron-right"></i>',
            prevArrow: '<i class="fa fa-chevron-left"></i>'
        });       
        
        
        (function() {
            
            var geocoder = new google.maps.Geocoder();

            var address;    
            {% if item.produtotag=='lancamentos' %}
                {% if item.MapaLatitude|default("") and item.MapaLongitude|default("") %}
                    address = "{{item.MapaLatitude}}, {{item.MapaLongitude}}";
                {% else %}
                    address = "Brasil, {{item.CidadeNome}}, {{item.BairroNome}} - {{item.Localizacao}}";
                {% endif %}
            {% else %}
                address = "{{item.Logradouro}} - {{item.BairroNome}}, {{item.CidadeNome}} {{item.EstadoSigla}}, Brasil  ";
            {% endif %}
                
                
            var latitude = "";
            var longitude = ""; 

            geocoder.geocode( {'address':address}, function(results) {
                latitude =  latitude + results[0].geometry.location.lat();
                longitude = longitude + results[0].geometry.location.lng();

                var latlng = new google.maps.LatLng(latitude, longitude);
                var myOptions = {
                  zoom: 14,
                  center: latlng,
                  scrollwheel: false,
                  draggable: false,
                  mapTypeId: google.maps.MapTypeId.ROADMAP
                };


                var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);

                var image = '/img/icon_placemark_sm.png';
                var imageHover = '/img/icon_placemark_sm.png';
                var myLatLng = new google.maps.LatLng(latitude, longitude);
                var marker = new google.maps.Marker({
                    position: myLatLng,
                    map: map,
                    icon: image
                });

                var contentString = '<h6>'+address+'</h6>';
                var infowindow = new google.maps.InfoWindow({ content: contentString });

                google.maps.event.addListener(marker, 'click', function() {
                    infowindow.open(map,marker);
                });

                //google.maps.event.addListener(marker, 'mouseout', function() {
                    //infowindow.close(map,marker);
                //});

                // Hover
                //google.maps.event.addListener(marker, 'click', function() {
                    //this.setIcon(imageHover);
                //});

                //google.maps.event.addListener(marker, 'mouseout', function() {
                    //this.setIcon(image);
                //});
            });
        })();

        $('h2.sectionTitle').each(function(){
            var palavras = $(this).text().split(' ');
            // $(this).html( $(this).text().replace(/(^\w{5})/,'<strong>$1</strong>'));
            $(this).html( $(this).text().replace(palavras[0],'<strong>' + palavras[0] + '</strong>'));
        });

        $('.lightgallery_slide').lightGallery({
            selector: '.item a',
            escKey: true
        });

        $('.lightgallery').lightGallery({
            // selector: '.item a',
            escKey: true
        });

        $('.owl-carousel-topicos').owlCarousel({
            loop:false,
            nav:true,
            margin:15,
            navText:['<i class="fa fa-chevron-left" aria-hidden="true"></i>','<i class="fa fa-chevron-right" aria-hidden="true"></i>'],
            responsive:{
                0:{
                    items:1
                },
                600:{
                    items:1
                },
                1000:{
                    items:1
                }
            }
        });

        $('.owl-carousel-grid-5').owlCarousel({
            loop:false,
            nav:true,
            margin:0,
            navText:[' ',' '],
            responsive:{
                0:{
                    items:1
                },
                600:{
                    items:2
                },
                1000:{
                    items:5
                }
            }
        });

        
       
            
    });

</script>

