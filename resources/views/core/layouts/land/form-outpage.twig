<!-- Modal -->
<div id="FormOutpage" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Não vá embora!</h4>
            </div>

            <div class="modal-body">
                <div class="row" style="margin: 0!important;">
                    <form class="form-contato-modal">
                        {{ csrf_field() }}

                        <input type="hidden" name="token" value="{{data.Guest.token|default("")}}" data="false">
                        
                        <input type="hidden" name="LancamentoID" value="{{content.ID}}" data="true">
                        <input type="hidden" name="Tag" value="contato/land-empreendimento">
                        
                        <input type="hidden" name="token" value="{{data.Guest.token|default("")}}" data="false">
                        <input type="hidden" name="id" value="{{content.ID}}" data="false" class="form-control">
                        <input type="hidden" name="Origem" value="form-modal-outpage" data="values">
                        <input type="hidden" name="Lancamento" value="{{content.Nome}}" data="values">
                        <input type="hidden" name="Mensagem" value="Formulário saída do site">
                        <input type="hidden" name="FlagNewsletter" value="true">
                        
                        
                        <div class="formEnviar">
                            <h5>Temos uma oferta EXCLUSIVA para você!</h5>
                            <div class="form-group">
                                {# todos os inputs, textarea, checkbox etc precisam ter a classe 'form-control' #}
                                <input class="form-control" type="text" name="Nome" value="{{data.Guest.Nome|default("")}}" placeholder="* Nome" required/>
                            </div>
                            <div class="form-group">
                                <input class="form-control mask-email" type="text" name="Email" value="{{data.Guest.Email|default("")}}" placeholder="* E-mail" required/>
                            </div>  

                            <div class="form-group">
                                
                                {# o span contato-mss recebe as mensagens de retorno para o usuario #}
                                <span class="contato-mss"></span>
                                
                                {# o botao de submit precisa ter a classe 'form-submit' #}
                                <button class="btn form-control form-submit" value="ok">Quero conhecer a oferta!</button>
                                
                            </div>
                        </div>

                        <div class="formResposta">
                            <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                            <h2><strong>Mensagem enviada,</strong> breve entraremos em contato.</h2>
                        </div>

                    </form>
                </div>
            </div>

        </div>

    </div>
</div>